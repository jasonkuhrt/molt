{
  "name": "@molt/command",
  "version": "0.1.0",
  "description": "Type-safe CLI command definition and execution.",
  "type": "module",
  "scripts": {
    "types:check": "tsc --noEmit",
    "test": "vitest",
    "clean": "tsc --build --clean",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "ts-node scripts/build-cjs.ts",
    "build:esm": "pnpm tsc --project tsconfig.esm.json",
    "build:toc": "markdown-toc README.md -i --maxdepth 4 && prettier --write README.md",
    "prepublishOnly": "pnpm build"
  },
  "files": [
    "src",
    "build"
  ],
  "types": "./build/esm/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./build/cjs/index.d.cts",
        "default": "./build/cjs/index.cjs"
      },
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      }
    }
  },
  "keywords": [],
  "author": "Jason Kuhrt",
  "license": "MIT",
  "dependencies": {
    "@molt/types": "workspace:*",
    "alge": "0.7.0-next.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.snakecase": "^4.1.1",
    "ts-toolbelt": "^9.6.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/lodash.camelcase": "4.3.7",
    "@types/lodash.snakecase": "^4.1.7",
    "conditional-type-checks": "1.0.6",
    "execa": "6.1.0",
    "fast-glob": "3.2.12",
    "fs-jetpack": "5.0.0"
  }
}
